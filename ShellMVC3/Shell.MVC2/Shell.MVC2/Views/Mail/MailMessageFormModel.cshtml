@model Shell.MVC2.Models.MailMessageModel


  @{ //Pull the users who are avaiable to chat from from the viewbag
      var OnlineChatUsers = ViewBag.OnlineChatUsers as List<ChatUser>; 
     
   } 



@{
    ViewBag.Title = "MailmessageForm"; 
    Layout = "~/Views/Members/Shared/_LayoutMembers.cshtml";
}

@{ Html.EnableClientValidation(); }


	<div id="bodyDiv">
		<div class="Txt_SEND">
			
				<p class="lastNode">SEND MESSAGE
			</p>
		</div>
		<div class="clearFloat"></div>
        @{ Html.EnableClientValidation(); }
            @{ using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

		<div id="Box3SliceContainer">
			<div id="Box3SliceContainer_top_1">
			</div>
			<div class="Txt_Sending">
				
					<p class="lastNode">Sending a message is strictly confidential. So your name and email address will never be revealed. Your Contact info is private and is never displayed.
				</p>
			</div>
			<div class="clearFloat"></div>
			<div id="colwrap4">
				<div id="leftBoxSlice">
					<div class="Txt_Subject">
						
							<p class="lastNode">Subject:
						</p>
					</div>
					<div class="clearFloat"></div>
                    <div id = "TextField_win">@Html.DisplayFor(model => model.Subject ) </div>
										<div class="clearFloat"></div>
					<div class="Txt_Message">
						
							<p class="lastNode">Message:
						</p>
					</div>
					<div class="clearFloat"></div>
				</div>
			</div>
			<div id="colwrap5">
				<div id="rightboxSlice">
					<div class="Txt_To">
						
							<p class="lastNode">To:
						</p>
					</div>
					<div class="Txt_Name">
						
							<p class="lastNode">@Model.RecipientName
						</p>
					</div>
					<div class="clearFloat"></div>
					<div id="photoDiv">
                      <img  src="@Url.Action("GetGalleryImageByScreenName", "Images", new { id = Model.RecipientName},null)" alt="" width ="94" height ="94" />
					</div>
					<div class="clearFloat"></div>
				</div>
				<div class="clearFloat"></div>
			</div>
            
			<div id="textAreaDiv">           
            <!--%: Html.TextAreaFor(model => model.Body,
                new
                {
                    cols = "95%",
                    rows = "12%",
                    Style = "color: #000;font-family: Arial, Helvetica, sans-serif;	font-size: 120%;"
                })%>-->
            @Html.TextAreaFor(model => model.Body, 14, 68, new { Width = "450px;", Height = "150px;" })
                         @Html.ValidationMessageFor(model => model.Body)
			</div>
            @Html.HiddenFor(model => model.RecipientID)
            @Html.HiddenFor(model => model.SenderID)
            @Html.HiddenFor(model => model.SenderName)
            @Html.HiddenFor(model => model.Subject) 
            @Html.HiddenFor(model => model.uniqueID)
			<div class="clearFloat"></div>
			
            <input type="submit" value="Save" name="Save" id="buttonDiv" />
			
			<div class="clearFloat"></div>
		<div id="Box3SliceContainer_bottom_1">
		</div>
		</div>
             } /* End of BeginForm() */}
		<div class="clearFloat"></div>
	</div>
